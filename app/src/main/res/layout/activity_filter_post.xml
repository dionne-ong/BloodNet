<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mobapde.bloodnet.FilterPostActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter By: "
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:id="@+id/tv_filterby"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"
            android:id="@+id/cb_a1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-"
            android:id="@+id/cb_a2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cb_ab1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B+"
            android:id="@+id/cb_b1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cb_ab2" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-"
            android:layout_toRightOf="@+id/cb_b1"
            android:id="@+id/cb_b2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB+"
            android:layout_below="@+id/cb_a1"
            android:id="@+id/cb_ab1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB-"
            android:layout_below="@+id/cb_a2"
            android:layout_toRightOf="@+id/cb_ab1"
            android:id="@+id/cb_ab2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O+"
            android:layout_below="@+id/cb_b1"
            android:layout_toRightOf="@+id/cb_ab2"
            android:id="@+id/cb_o1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O-"
            android:layout_below="@+id/cb_b2"
            android:layout_toRightOf="@+id/cb_o1"
            android:id="@+id/cb_o2"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_posts"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luisa Gilig"
            android:id="@+id/tv_name_p"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(B+)"
            android:layout_toRightOf="@+id/tv_name_p"
            android:id="@+id/tv_btype_p"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted: February 27, 2017"
            android:id="@+id/tv_datepost_p"
            android:layout_below="@+id/tv_name_p"/>
    </RelativeLayout>

</LinearLayout>
