<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mobapde.bloodnet.ViewHospitalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/profile">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/iv_hpic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/iv_iname"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese General Hospital"
                android:layout_toRightOf="@+id/iv_iname"
                android:id="@+id/tv_hname" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/iv_istreet"
                android:layout_below="@+id/tv_hname"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2BC Blumentritt Rd, Sampaloc, "
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_istreet"
                android:id="@+id/tv_hstreet"
                android:layout_below="@+id/tv_hname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manila, Metro Manila"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="125dp"
                android:id="@+id/tv_hcity"
                android:layout_below="@+id/tv_hstreet"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/iv_inum"
                android:layout_below="@+id/tv_hcity"
                android:layout_marginLeft="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(02) 711 4141"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_inum"
                android:id="@+id/tv_hnum"
                android:layout_below="@+id/tv_hcity"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_horizontal_margin"
        android:id="@+id/rv_posts" >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
