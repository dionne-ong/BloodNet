<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mobapde.bloodnet.FilterPostActivity">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/iv_image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luisa Gilig"
            android:textSize="20dp"
            android:layout_marginLeft="163dp"
            android:id="@+id/tv_name_p" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_iname"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/tv_name_p"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese General Hospital"
            android:layout_toRightOf="@+id/iv_iname"
            android:id="@+id/tv_hname"
            android:layout_below="@+id/tv_name_p"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2BC Blumentritt Rd, Sampaloc, "
            android:gravity="center"
            android:layout_marginLeft="125dp"
            android:id="@+id/tv_hstreet"
            android:layout_below="@+id/tv_hname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manila, Metro Manila"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="125dp"
            android:id="@+id/tv_hcity"
            android:layout_below="@+id/tv_hstreet"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_inum"
            android:layout_below="@+id/tv_hcity"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" (02) 711 4141"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_inum"
            android:id="@+id/tv_hnum"
            android:layout_below="@+id/tv_hcity"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_ibtype"
            android:layout_below="@+id/tv_hnum"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" B+"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_ibtype"
            android:id="@+id/tv_hbtype"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tv_hnum"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_inumb"
            android:layout_below="@+id/iv_ibtype"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_ibtype"
            android:id="@+id/tv_hnumb"
            android:layout_below="@+id/tv_hbtype"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Posted: February 27, 2017"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_datepost_p"
            android:layout_below="@+id/tv_hnumb"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEDGE"
        android:layout_margin="10dp"
        android:gravity="center"/>
</LinearLayout>
